@model IEnumerable<OnlineTicariSite.Models.Siniflar.SinifGrup2>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departman Personel Sayıları </h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Sayı</th>
                </tr>
            </thead>
            <tbody>
                @{int sirano = 0; }
                @{int count = 10; }
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{sirano++;} @sirano</td>
                        <td>@x.Departman</td>
                        <td>
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-danger" style="width:@(x.Sayi * 100 / 20)% "></div>
                            </div>
                        </td>
                        <td><span class="badge bg-danger">@x.Sayi</span></td>
                    </tr>



                }

            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>