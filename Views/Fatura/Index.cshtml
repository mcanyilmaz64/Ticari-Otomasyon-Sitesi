@using OnlineTicariSite.Models.Siniflar
@model List<Fatura>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<table class="table table-bordered" style="margin-top:20px">

    <tr>
        
        <th>Fatura Seri No</th>
        <th>Fatura Sıra No</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Vergi Dairesi</th>
        <th>Teslim Eden</th>
        <th>Teslim Alan</th>
        <th>Toplam</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Yeni Kalem </th>


    </tr>

    @foreach (var k in Model)
    {
        <tr>


            <td>@k.FaturaSerino </td>
            <td>@k.FaturaSırano </td>
            <td>@k.Tarih </td>
            <td>@k.Saat </td>
            <td>@k.VergiDairesi </td>

            <td>@k.TeslimEden </td>
            <td>@k.TeslimAlan </td>
            <td>@k.Toplam ₺</td>


            <td><a href="/Fatura/FaturaGetir/@k.FaturaId" class="btn btn-success">Güncelle </a></td>
            <td><a href="/Fatura/FaturaDetay/@k.FaturaId" class="btn btn-success" style="background-color:darkorange;color:white">Detay </a></td>
           
            <td><a href="/Fatura/FaturaDetay/@k.FaturaId" class="btn btn-success" style="background-color:indianred;color:white">Kalem </a></td>
        </tr>

    }
</table>
<a href="/Fatura/FaturaEkle" class=" btn btn-info">Yeni Fatura Girişi </a>

<br />
<br />

<button type="button" class="btn btn-warning" style="background-color:palevioletred; color:azure" data-toggle="modal" data-target="#Modal1">Popup Penceresi</button>
<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title"> Popup Diyalog Ekranı </h2>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <td> Seri No</td>
                        <td> Sıra No</td>
                        <td> Tutar</td>

                    </tr>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.FaturaSerino </td>
                            <td>@x.FaturaSırano </td>
                            <td>@x.Toplam </td>


                        </tr>
                    }

                </table>
                <button class="btn btn-danger" type="button" data-dismiss="modal">Tamam</button>
            </div>
        </div>

    </div>
</div>

