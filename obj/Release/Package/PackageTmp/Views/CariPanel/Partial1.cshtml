@model OnlineTicariSite.Models.Siniflar.Cariler

@using (Html.BeginForm("CariBilgiGuncelle", "CariPanel", FormMethod.Post))
{
    <form class="form-horizontal">
        @Html.HiddenFor(x=>x.CariId)

        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">Isim</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputEmail" class="col-sm-2 col-form-label">Soyisim</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputName2" class="col-sm-2 col-form-label">Mail</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputExperience" class="col-sm-2 col-form-label">Sehir</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputSkills" class="col-sm-2 col-form-label">Şifre</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.CariSifre, new { @class = "form-control" })

            </div>

        </div>

        <div class="form-group row">

            <div class="offset-sm-2 col-sm-10">

                <div class="checkbox">

                    <label>

                        <input type="checkbox"> Bilgileri Okudum <a href="#">Şifre Değiştirme Şartlarını Kabul Ediyorum </a>

                    </label>

                </div>

            </div>

        </div>

        <div class="form-group row">

            <div class="offset-sm-2 col-sm-10">

                <button type="submit" class="btn btn-danger">Güncelle</button>

            </div>

        </div>

    </form>
}