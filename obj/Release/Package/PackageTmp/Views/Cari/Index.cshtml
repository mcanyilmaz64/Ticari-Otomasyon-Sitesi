@using OnlineTicariSite.Models.Siniflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
    <br />
   <table class="table table-bordered">

       <tr>
           <th>Cari ID</th>
           <th>Ad</th>
           <th>Soyad</th>
           <th>Şehir</th>
           <th>Mail</th>
           <th>Sil</th>
           <th>Guncelle</th>
           <th>Detaylar</th>
       </tr>
       @foreach(var x in Model)
            {
               <tr>
                   <td>@x.CariId</td>
                   <td>@x.CariAd</td>
                   <td>@x.CariSoyad</td>
                   <td>@x.CariSehir</td>
                   <td>@x.CariMail</td>
                   <td><a href="/Cari/CariSil/@x.CariId" class=" btn btn-danger">Sil </a></td>
                   <td><a href="/Cari/CariGetir/@x.CariId" class="btn btn-success">Güncelle </a></td>
                   <td><a href="/Cari/MusteriSatis/@x.CariId" class="btn btn-warning">Satış Geçmişi </a></td>
               </tr>

            }

   </table>
<a href="/Cari/YeniCari" class="btn btn-info">Cari Ekle</a>

